<!DOCTYPE html>
<html lang="en" data-theme="corporate">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Climate Solutions Projects</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <%- include('partials/navbar') %>

    <div class="container mx-auto p-6">
      <!-- Hero -->
      <div class="hero bg-base-200 rounded-2xl shadow-md mb-10">
        <div class="hero-content text-center">
          <div class="max-w-2xl">
            <h1 class="text-5xl font-bold mb-4">Climate Solutions Projects</h1>
            <p class="mb-6">
              Browse projects by sector to discover innovative climate
              solutions.
            </p>
            <div class="flex flex-wrap gap-2 justify-center">
              <a
                href="/solutions/projects?sector=Land Sinks"
                class="btn btn-sm btn-primary"
                >Land Sinks</a
              >
              <a
                href="/solutions/projects?sector=Industry"
                class="btn btn-sm btn-primary"
                >Industry</a
              >
              <a
                href="/solutions/projects?sector=Transportation"
                class="btn btn-sm btn-primary"
                >Transportation</a
              >
              <a
                href="/solutions/projects?sector=Electricity"
                class="btn btn-sm btn-primary"
                >Electricity</a
              >
              <a
                href="/solutions/projects?sector=Food, Agriculture, and Land Use"
                class="btn btn-sm btn-primary"
                >Food, Agriculture, and Land Use</a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Projects Table -->
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
            <tr>
              <td class="font-semibold"><%= project.title %></td>
              <td>
                <a
                  href="/solutions/projects?sector=<%= project.sector %>"
                  class="btn btn-xs btn-accent"
                >
                  <%= project.sector %>
                </a>
              </td>
              <td class="max-w-md"><%= project.summary_short %></td>
              <td>
                <a
                  href="/solutions/projects/<%= project.id %>"
                  class="btn btn-xs btn-primary"
                >
                  Details
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% if (projects.length === 0) { %>
      <div class="alert alert-warning mt-6">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="stroke-current shrink-0 h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          />
        </svg>
        <span>No projects found matching your criteria.</span>
      </div>
      <% } %>
    </div>
  </body>
</html>
